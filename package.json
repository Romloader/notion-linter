{
  "name": "notion-linter",
  "displayName": "Notion Linter",
  "description": "A Linter for Notion Formulas as a VSCode Extension",
  "author": "Romloader",
  "publisher": "romloader",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/Romloader/notion-linter/"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "notion-formula",
        "aliases": [
          "Notion Formula",
          "notion-formula"
        ],
        "extensions": [
          ".normula"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "notion-formula",
        "scopeName": "text.notion-formula",
        "path": "./syntaxes/notion-formula.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "General configuration",
      "properties": {
        "notion-linter.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Maximum amount of problems reported by the server."
        },
        "notion-linter.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace the communication between VSCode and the language server."
        }
      }
    }
  },
  "scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "typescript": "^4.9.4"
  }
}
